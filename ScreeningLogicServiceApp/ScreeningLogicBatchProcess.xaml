<Window x:Class="ScreeningLogicServiceApp.ScreeningLogicBatchProcess"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreeningLogicServiceApp"
        xmlns:views="clr-namespace:ScreeningLogicServiceApp.Views"
        mc:Ignorable="d"
        Title="Screening Logic Service" Height="700" Width="1200" Background="#E9F6FB">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0" x:Name="MainTabs" Margin="0" Background="#E9F6FB" FontSize="18">
            <TabControl.ItemContainerStyle>
                <Style TargetType="TabItem">
                    <Setter Property="Padding" Value="24,12"/>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="MinHeight" Value="44"/>
                </Style>
            </TabControl.ItemContainerStyle>

            <TabItem Header="Dashboard">
                <views:DashboardView x:Name="DashboardViewControl"/>
            </TabItem>

            <TabItem Header="Passwords">
                <views:PasswordsView/>
            </TabItem>

            <TabItem Header="Behavior">
                <views:BehaviorView/>
            </TabItem>

            <TabItem Header="QC">
                <views:QCView/>
            </TabItem>

            <TabItem Header="Notifications">
                <views:NotificationsView/>
            </TabItem>
        </TabControl>

        <!-- Application Close button outside the TabControl -->
        <Grid Grid.Row="1" Background="Transparent">
            <Button x:Name="AppCloseButton"
                    Content="Close"
                    Width="160" Height="44"
                    HorizontalAlignment="Right"
                    Margin="0,8,16,16"
                    Style="{StaticResource CloseButtonStyle}"
                    Click="AppCloseButton_Click"/>
        </Grid>
    </Grid>
</Window>
